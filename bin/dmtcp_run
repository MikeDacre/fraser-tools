#!/bin/bash
module load dmtcp

#######################
#  Command Line Args  #
#######################

usage_str='USAGE:
  dmtcp_run [DMTCP_LAUNCH OPTIONS] script
  dmtcp_run -r checkpoint_dir [DMTCP_RESTART OPTIONS]

OPTIONS:
  -r :
      Restart a previously running script from a checkpoint file
      or files.
  --help:
      Print this message and exit.

DMTCP_LAUNCH OPTIONS:
  Any options that can be passed to dmtcp_launch.
  
DMTCP_RESTART OPTIONS:
  Any options that can be passed to dmtcp_restart.'

restart=0
if [ $# -gt 0 ]; then
  if [ $1 = "--help" ]; then
    echo "$usage_str"
    exit
  elif [ $# -ge 1 ]; then
    case "$1" in
      -r)
        restart=1
        shift;;
    esac
  elif [ $1 = "--help" ]; then
    echo "$usage_str"
    exit
  fi
else
  echo "$usage_str"
  exit
fi

#######################
#  Start Coordinator  #
#######################

if [[ $restart == 1 ]]; then
  echo "Restarting with dmtcp" >&2
  dir=$1
  shift
  mkdir -p $dir
else
  echo "Running with dmtcp" >&2
  dir="dmtcp.${1}.$(date +'%d%H%M%S')"
fi
portfile="${dir}/port"

dmtcp_coordinator --ckptdir $dir --daemon --exit-on-last -p 0 --port-file $portfile &>/dev/null
port=`cat $portfile`
dmtcp_command -p $port -s &>/dev/null
if [[ $? != 0 ]]; then
  echo "Failed to start dmtcp_coordinator." >&2
  exit 420
fi
echo "Checkpoint Dir: $dir" >&2
echo "Port: $port" >&2
 
################
# Trap signals #
################

trap_with_arg() {
    func="$1" ; shift
    for sig ; do
        trap ' $func $sig ' $sig
    done
}

save_and_exit() {
  echo "Caught: $1" >&2
  echo "Saving..." >&2
  # dmtcp_command -p $port -s
  dmtcp_command -p $port -bc
  code=$?
  kill -INT $(jobs -p)
  kill -- -$$
  if [[ $code == 0 ]]; then
    echo "Saved complete, exiting now" >&2
    exit 42
  else
    echo "Failed to save" >&2
    exit 24
  fi
}

cleanup() {
  dmtcp_command -p $port -q &>/dev/null
  exit
}

trap_with_arg save_and_exit USR1 HUP INT QUIT TERM
trap ' cleanup ' EXIT
 
#################
#  Run process  #
#################
 
if [[ $restart == 1 ]]; then
  $dir/dmtcp_restart_script.sh -p $port --ckptdir $dir $@ &
  child=$!
else
  dmtcp_launch -p $port --ckptdir $dir --no-gzip --ckpt-open-files $@ &
  child=$!
fi

#####################
#  Wait for Signal  #
#####################

wait "$child"
